{
  "name": "@cd/agent-sdk",
  "version": "0.1.2",
  "description": "WebSocket SDK for Cognitive Dungeon agents - network layer with auto-reconnection, message queuing, and server management",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "websocket",
    "cognitive-dungeon",
    "sdk",
    "agent",
    "game",
    "network",
    "client"
  ],
  "author": "Cognitive Dungeon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cognitive-Dungeon/cd-agent-sdk-ts"
  },
  "bugs": {
    "url": "https://github.com/Cognitive-Dungeon/cd-agent-sdk-ts/issues"
  },
  "homepage": "https://github.com/Cognitive-Dungeon/cd-agent-sdk-ts#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
